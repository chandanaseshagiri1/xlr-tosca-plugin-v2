<synthetic xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.xebialabs.com/deployit/synthetic synthetic.xsd" xmlns="http://www.xebialabs.com/deployit/synthetic">

    <!--
       #######################################################################################################################
       #   Tosca Server Configuration
       #######################################################################################################################
    -->
    <type type="tosca.Server" extends="configuration.HttpConnection">
    </type>

    <!--
        #######################################################################################################################
        #  Execute tests
        #######################################################################################################################
    -->
    <type type="tosca.Execute" extends="xlrelease.PythonScript" virtual="true">
        <property name="iconLocation" hidden="true" default="tosca-icon.png"/>
        <property name="taskColor" hidden="true" default="#2666ae" />

        <property name="toscaServer" category="input" label="Server" referenced-type="tosca.Server" kind="ci"/>
        <property name="username" category="input" required="false" description="Override the global server username if necessary" />
        <property name="password" category="input" password="true" required="false" description="Override the global server password if necessary" />

        <property name="workspace" category="input" description="Workspace name where test event exists." default="Test" required="true"/>
		<property name="testEventId" category="input" description="ID of the test event to be executed" required="true"/>

        <property name="result_type" category="input" label="Result Type" kind="string" default="Default" required="false" />
        <property name="polling_interval" category="input" label="Polling Interval" kind="integer" default="300000" />
        <property name="client_timeout" category="input" label="Timeout" kind="integer" default="10800000" />
        <property name="consider_execution_result" category="input" label="Consider Exec Result" kind="boolean" default="false" />
    </type>

</synthetic>
